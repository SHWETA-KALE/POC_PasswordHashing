@model HasingBcryptLogin.Models.AccountViewModel

<style>
    <style >
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    form {
        background-color: #ffffff;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        width: 280px;
    }

    .form-group {
        margin-bottom: 12px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 15px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .alert {
        padding: 10px;
        margin-top: 10px;
        border-radius: 4px;
        font-size: 13px;
    }

    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
    }

    .alert-success {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
    }
</style>

</style>

<div class="heading">
    <h2>@(Model.IsCreatingUser ? "Create New User" : "Login")</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.IsCreatingUser ? "Create" : "Login")
    </button>

    <div>
        @if (Model.IsCreatingUser)
        {
            <a href="@Url.Action("Index", "Account", new { isCreatingUser = false })">Back to Login</a>
        }
        else
        {
            <a href="@Url.Action("Index", "Account", new { isCreatingUser = true })">Create New User</a>
        }
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" style="color:darkred">
        @ViewBag.ErrorMessage
    </div>
}

@if (ViewBag.WelcomeMessage != null)
{
    <div class="alert alert-success" style="color:blue">
        @ViewBag.WelcomeMessage
    </div>
}


